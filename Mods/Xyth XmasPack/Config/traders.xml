    <item name="snowShovel" prob="0.5"/>
    <item name="candyCane" prob="0.1"/>
  </append>

  <append xpath="/traders/trader_item_groups/trader_item_group[@name='decorativeCurtains']">
    <item name="lightString" count="4,15"/>
    <item name="lightStringDiag" count="4,15"/>
  </append>
  
  <append xpath="/traders/trader_item_groups/trader_item_group[@name='decorativeBlinds']">
    <item name="lightString" count="4,15"/>
    <item name="lightStringDiag" count="4,15"/>
  </append>
  
  <append xpath="/traders/trader_item_groups/trader_item_group[@name='decorativeBlocks']">
    <item name="lightString" count="4,15"/>
    <item name="lightStringDiag" count="4,15"/>
    <item name="xmasCandle" count="1,2"/>
    <item name="beesWaxCandle" count="1,2"/>   
